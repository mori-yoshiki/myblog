<div class="topic_new_warapper">
  <div class= "container">
    <div class="row">
      <div class= "col-md-6 col-md-offset-3">
        <h1>ブログ新規作成</h1>
        <%= form_for @blog do |f| %>
          <div class="form-group">
            <%= f.label :image, "画像" %>
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_area :title, class: "form-control" %>
          </div>
          <div class= "form-group">
            <%= f.label :content, "コンテンツ" %>
            <%= f.text_area :content, class: "form-control"%>
          </div>
            <%= f.submit "投稿", class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>